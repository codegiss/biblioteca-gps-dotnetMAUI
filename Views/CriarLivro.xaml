<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biblioteca.Views.CriarLivro"
             Title="Criar Livro - Preencha os campos">
    <VerticalStackLayout
        Padding="10"
        Spacing="0">
        <HorizontalStackLayout
            Spacing="15"
            Padding="10">
            <Label 
                Text="Nome do livro:"
                FontSize="20"
                VerticalOptions="Start" 
                HorizontalOptions="Start" />
            <Entry
                MaxLength="20"
                FontSize="20"
                x:Name="entryNomeLivro"
                TextChanged="EntriesChanged"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout
            Spacing="15"
            Padding="10">
            <Label 
                Text="ISBN:"
                FontSize="20"
                VerticalOptions="Start" 
                HorizontalOptions="Start" />
            <Entry
                MaxLength="13"
                FontSize="20"
                x:Name="entryISBN"
                Keyboard="Numeric"
                Placeholder="13 nÃºmeros"
                TextChanged="OnISBNChanged"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout
            Spacing="15"
            Padding="10">
            <Label 
                Text="Nome do autor:"
                FontSize="20"
                VerticalOptions="Start" 
                HorizontalOptions="Start" />
            <Entry
                MaxLength="20"
                FontSize="20"
                x:Name="entryNomeAutor"
                TextChanged="EntriesChanged"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout
            Spacing="15"
            Padding="10">
            <Label 
                Text="Email do autor:"
                FontSize="20"
                VerticalOptions="Start" 
                HorizontalOptions="Start" />
            <Entry
                MaxLength="20"
                FontSize="20"
                x:Name="entryEmailAutor"
                TextChanged="EntriesChanged"/>
        </HorizontalStackLayout>
        <Button
            Text="Adicionar"
            x:Name="btnAdicionar"
            Clicked="OnAdicionarClicked"
            IsEnabled="False"
            HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>